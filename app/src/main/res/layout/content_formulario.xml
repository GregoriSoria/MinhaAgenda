<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="admin.com.minhaagenda.Formulario"
    tools:showIn="@layout/activity_formulario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/botaoFormulario"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_above="@+id/nomeFormulario"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_botao_foto" />

                <EditText
                    android:id="@+id/telefoneFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/siteFormulario"
                    android:layout_below="@+id/siteFormulario"
                    android:ems="10"
                    android:hint="telefone:"
                    android:inputType="number" />

                <ImageView
                    android:id="@+id/imagemFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/holo_blue_light"
                    android:src="@drawable/person" />

                <EditText
                    android:id="@+id/nomeFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imagemFormulario"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:hint="nome:"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/siteFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/emailFormulario"
                    android:layout_below="@+id/emailFormulario"
                    android:ems="10"
                    android:hint="site:"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/emailFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/nomeFormulario"
                    android:layout_below="@+id/nomeFormulario"
                    android:ems="10"
                    android:hint="email:"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/enderecoFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/telefoneFormulario"
                    android:layout_below="@+id/telefoneFormulario"
                    android:ems="10"
                    android:hint="endereÃ§o:"
                    android:inputType="textPersonName" />
            </RelativeLayout>
        </FrameLayout>
    </ScrollView>

</RelativeLayout>
